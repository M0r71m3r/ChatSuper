<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ControllerImpl">
   <children>
      <TextArea fx:id="chatArea" nodeOrientation="LEFT_TO_RIGHT" prefHeight="288.0" prefWidth="640.0" wrapText="true" />
      <Pane prefHeight="200.0" prefWidth="200.0">
         <children>

            <TextField fx:id="sendField" layoutX="12.0" layoutY="14.0" prefHeight="3.0" prefWidth="301.0" />

            <Button fx:id="sendBtn" layoutX="313.0" layoutY="14.0" mnemonicParsing="false" onAction="#sendMessage" text="Send" />

            <TextArea fx:id="nickName" layoutX="14.0" layoutY="54.0" prefHeight="39.0" prefWidth="128.0" wrapText="true" />

         </children>
      </Pane>
   </children>
</VBox>
